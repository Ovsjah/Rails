<%= form_for(@article, html: {multipart: true}) do |f| %>  <!-- create a form for the object named @article that accepts multipart data, refer to the form by the name f and add the following elements to the form -->
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br>  <!-- f.label helper creates an HTML label for a field -->
    <%= f.text_field :title %>  <!-- f.text_field helper creates a single-line text box named title -->
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>  <!-- f.text_area helper creates a multi-line text box named body -->
  </p>
  <p>
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br>
    <%= f.file_field :image %> <!-- creates field for file uploading -->
  </p>
  <p>
    <%= f.submit %>  <!-- f.submit helper creates a button labeled "Create" -->
  </p>
<% end %>
